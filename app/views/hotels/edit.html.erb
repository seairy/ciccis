<h1>编辑酒店</h1>
<%= form_for @hotel do |f| %>
  <%= render "shared/error_messages", :target => @hotel %>
  <fieldset class="form-generic">
    <ul>
      <li><label>名称：</label><%= f.text_field :name, :class => 'text-field' %></li>
    </ul>
    <div class="operation-generic">
      <%= link_to '修改', '#', :onclick => "submitForm('edit_hotel_#{@hotel.id}')", :class => 'button' %>
      <%= link_to '返回酒店信息', @hotel, :class => 'button' %>
      <%= link_to '返回酒店列表', hotels_path, :class => 'button' %>
    </div>
  </fieldset>
<% end %>