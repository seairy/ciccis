<h1>酒店列表<span><%= link_to '添加酒店', new_hotel_path %></span></h1>
<table class="list-generic">
  <tr>
    <th>名称</th>
    <th>房间总数</th>
  </tr>
  <% if @hotels.blank? %>
    <%= raw empty_record_tag %>
  <% else %>
    <% @hotels.each_with_index do |hotel, index| %>
      <tr class="<%= odevity_tag index %>">
        <td><%= link_to hotel.name, hotel %></td>
        <td><%= hotel.rooms.total_amount %></td>
      </tr>
    <% end %>
  <% end %>
</table>
<%= will_paginate @hotels %>