<h1>编辑雇员</h1>
<%= form_for [@hotel, @room] do |f| %>
  <%= render "shared/error_messages", :target => @room %>
  <fieldset class="form-generic">
    <ul>
      <li><label>名称：</label><%= f.text_field :name, :class => 'text-field' %></li>
    </ul>
    <ul>
      <li><label>房间数量：</label><%= f.text_field :amount, :class => 'text-field' %></li>
    </ul>
  </fieldset>
  <div class="operation-generic">
    <%= link_to '修改', '#', :onclick => "submitForm('edit_room_#{@room.id}')", :class => 'button' %>
    <%= link_to '返回酒店信息', @hotel, :class => 'button' %>
  </div>
<% end %>