<h1>身份统计</h1>
<fieldset class="form-generic">
  <% @titles.each do |title| %>
    <ul>
      <li><label><%= title.name %>：</label>共<%= link_to title.conventioners.size, title, :target => '_blank' %>人，已签到<%= link_to title.conventioners.registered.size, title_path(title, :registered => true), :target => '_blank' %>人，未签到<%= link_to title.conventioners.unregistered.size, title_path(title, :unregistered => true), :target => '_blank' %>人</li>
    </ul>
  <% end %>
</fieldset>